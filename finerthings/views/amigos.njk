{% extends "layoutNav.njk" %}

{% block head %}
    <title>Tu librería</title>
    <link rel="stylesheet" href="/stylesheets/libreria.css">
{% endblock %}

{% block nav %}
    <li class="nav-item active">
        <a class="nav-link" href="/dashboard">Inicio<span class="sr-only"></span></a>
    </li>

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categorías
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/libros">Todos</a>
            <a class="dropdown-item" href="/accion">Acción</a>
            <a class="dropdown-item" href="/aventura">Aventura</a>
            <a class="dropdown-item" href="/romance">Romance</a>
    </li>

    <li class="nav-item">
        <a class="nav-link" href="#">Librería</a>
    </li><br>

    <li class="nav-item">
        <a class="nav-link" href="/escribir">Mis publicaciones</a>
    </li><br>

    <li class="nav-item">
        <a class="nav-link" href="/miperfil">Mi perfil</a>
    </li><br>

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Comunidad
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/comunidad">Encontrar amigos</a>
            <a class="dropdown-item" href="#">Mis amigos</a>
    </li>

    <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
    </li><br>


{% endblock %}

{% block header %}
        <h1>¡Hola, {{ user.firstName }}!</h1>
{% endblock %}

{% block content %}
    {% if follows|length < 1 %}
        <h3>No tienes ningún usuario añadido como amigo.</h3>
        <a class="btn btn-outline-light" href="/comunidad">COMIENZA A SEGUIR USUARIOS</a>
    {% else %}
        <h3>Aquí están los usuarios a los que sigues.</h3>

        {% for follow in follows %}
        <form method="POST" action="/amigos">

            <div class ="container">
                <div class="libros">
                    <img class="photo" src="/img/{{ follow.username }}.jpg" alt="Sample photo">
                    <div class="libros-body">
                        <h3 class="libros-heading">{{ follow.username }}</h3>
                        <div class="libros-description">{{ follow.email }}</div>
                        <a href="/libreria/{{ favorite._id }}"> Leer más </a><br>
                        <input type="hidden" id="followfriend" name="followfriend" value="{{ follow.username }}">
                        <br><input type="submit" class="btn btn-outline-dark" value="Eliminar de Amigos">
                    </div>
                </div>
            </div>
        </form>

        {% endfor %}


    {% endif %}

{% endblock %}

{% block footer %}{% endblock %}